# Academic Research Mentor Environment Configuration

# API Keys
OPENROUTER_API_KEY=your-openrouter-key-here

# Optional: Memory/Context persistence (https://supermemory.ai)
SUPERMEMORY_API_KEY=your-supermemory-key-here

# Optional search providers
TAVILY_API_KEY=your-tavily-api-key-here

# Model Configuration
OPENROUTER_MODEL=openai/gpt-4.1 # Default model, can switch to anthropic/claude-sonnet-4, openai/o3-mini, etc.

# Agent Configuration
LC_AGENT_MODE=react
ARM_PROMPT=system

# Conversation History Configuration
ARM_HISTORY_ENABLED=true #shift to false, if not needed
# Maximum number of prior messages to include in prompts (Human/AI messages, excludes System)
ARM_MAX_HISTORY_MESSAGES=12

# Guidelines Engine Configuration
ARM_GUIDELINES_MODE=on
ARM_GUIDELINES_FORMAT=comprehensive
ARM_GUIDELINES_INCLUDE_STATS=false
